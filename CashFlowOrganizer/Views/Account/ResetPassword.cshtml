@model CashFlowOrganizer.Models.ResetPasswordViewModel

<div class="container container-fluid">
    <div class="col-sm-12">

        <div class="col-sm-6 col-sm-offset-3 topMargin40">

            @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "navbar-form navbar-right" }))
            {
                @Html.AntiForgeryToken()

                <div class="panel panel-main greyblueBACKGROUND">
                    <div class="panel-heading text-center greyblueBACKGROUND whiteCOLOR font150">Reset Password</div>
                    <div class="panel-body">

                        <div class="col-sm-12 noPadding">

                            <div class="col-sm-12 text-center">
                                @Html.LabelFor(m => m.Password, htmlAttributes: new { @class = "control-label tallLabel" })
                            </div>
                            <div class="col-sm-10 col-sm-offset-1">
                                @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control tallInput wideInput", @placeholder = "Password" } })
                                @Html.ValidationMessageFor(m => m.Password)
                            </div>
                            <div class="col-sm-12 text-center">
                                @Html.LabelFor(m => m.ConfirmPassword, htmlAttributes: new { @class = "control-label tallLabel" })
                            </div>
                            <div class="col-sm-10 col-sm-offset-1">
                                @Html.EditorFor(m => m.ConfirmPassword, new { htmlAttributes = new { @class = "form-control tallInput wideInput", @placeholder = "Confirm Password" } })
                                @Html.ValidationMessageFor(m => m.ConfirmPassword)
                            </div>

                            <div class="text-center">
                                <button type="submit" class="btn btn-block btnHover font125 greyblueBACKGROUND whiteCOLOR">Reset Password</button>
                            </div>

                        </div>

                    </div>
                </div>
            }

        </div>
        <div class="col-sm-6 col-sm-offset-3 text-center font125">
            @Html.ValidationMessage("Summary")
        </div>

    </div>


</div>
