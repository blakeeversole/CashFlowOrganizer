@model CashFlowOrganizer.Models.ForgotPasswordViewModel

<div class="container container-fluid">
    <div class="col-sm-12">

        <div class="col-sm-6 col-sm-offset-3 topMargin40">

            @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "navbar-form navbar-right" }))
            {
                @Html.AntiForgeryToken()

                <div class="panel panel-main greyblueBACKGROUND">
                    <div class="panel-heading text-center greyblueBACKGROUND whiteCOLOR font150">Reset Password</div>
                    <div class="panel-body">

                        <p class="text-center font125">Please enter your email address.</p>

                            <div class="col-sm-12 text-center">
                                @Html.LabelFor(m => m.Email, htmlAttributes: new { @class = "control-label tallLabel" })
                            </div>
                            <div class="col-sm-10 col-sm-offset-1">
                                @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control tallInput wideInput", @placeholder = "Email" } })
                                @Html.ValidationMessageFor(m => m.Email)
                            </div>
                            <div class="col-sm-12 text-center">
                                @Html.LabelFor(m => m.ConfirmEmail, htmlAttributes: new { @class = "control-label tallLabel" })
                            </div>
                            <div class="col-sm-10 col-sm-offset-1">
                                @Html.EditorFor(m => m.ConfirmEmail, new { htmlAttributes = new { @class = "form-control tallInput wideInput", @placeholder = "Confirm Email" } })
                                @Html.ValidationMessageFor(m => m.ConfirmEmail)
                            </div>

                            <div class="text-center">
                                <button type="submit" class="btn btn-block btnHover font125 greyblueBACKGROUND whiteCOLOR">Send email to reset password</button>
                            </div>

                            <div class="text-center">
                                <p></p>
                                <a href="@Url.Action("SignIn","Account")" class="font125 btnHover">Go Back</a>
                                <p></p>
                            </div>


                    </div>
                </div>
            }

        </div>
        <div class="col-sm-6 col-sm-offset-3 text-center font125">
            @Html.ValidationMessage("Summary")
        </div>

    </div>


</div>
