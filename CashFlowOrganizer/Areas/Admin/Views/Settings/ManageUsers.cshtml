
@model CashFlowOrganizer.Areas.Admin.Models.ManageUsersViewModel

    <div class="col-sm-12 topMargin40 noPadding">

        <div class="col-sm-6 col-sm-offset-3 noPadding">

                <div class="panel panel-main greyblueBACKGROUND">
                    <div class="panel-heading text-center font150 whiteCOLOR greyblueBACKGROUND">Manage Users</div>
                    <div class="panel-body">

                        <div class="row noPadding">
                            <div class="col-sm-12 noPadding">
                                <div class="col-sm-3 text-center noPadding font125"><strong>First Name</strong></div>
                                <div class="col-sm-3 text-center noPadding font125"><strong>Last Name</strong></div>
                                <div class="col-sm-3 text-center noPadding font125"><strong>User Role</strong></div>
                            </div>
                        </div>

                        <div class="row noPadding">
                            <div class="col-sm-12 noPadding">

                                @for (int i = 0; i < Model.UserList.Count; i++)
                                {
                                    <div class="col-sm-3 text-center noPadding">
                                        @(Model.UserList[i].FirstName)
                                    </div>
                                    <div class="col-sm-3 text-center noPadding">
                                        @(Model.UserList[i].LastName)
                                    </div>
                                    <div class="col-sm-3 text-center noPadding">
                                        @(Model.UserList[i].Role)
                                    </div>
                                    <div class="col-sm-3">
                                        <a href="@Url.Action("EditUser", "Settings", new { AspNetUsersID = Model.UserList[i].AspNetUsersID })">Edit</a>
                                    </div>
                                }
                            </div>
                        </div>






                        <div style="padding-top: 100px;">
                            <a href="@Url.Action("Index")" class="btn whiteCOLOR greyblueBACKGROUND btnHover font125 pull-right">Back</a>
                        </div>

                    </div>
                </div>
                
        </div>
    </div>



