
@using (Ajax.BeginForm("UpdateUsername", "UserAccount", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "Username", InsertionMode = InsertionMode.Replace }))
{
    @Html.Raw(TempData["UsernameMSG"])

    <div class="col-sm-12 noPadding">
        <div class="col-sm-9">
            @Html.Editor("Username", new { htmlAttributes = new { @class = "form-control tallInput wideInput", @placeholder = "Username" } })
            @Html.ValidationMessage("Username")
        </div>
        <div class="col-sm-3">
            <div class="text-center">
                <button type="submit" class="btn btn-block btnHover font125 greyblueBACKGROUND whiteCOLOR roundBORDER">Update</button>
            </div>
        </div>
    </div>

    <div>@Html.ValidationMessage("Summary")</div>    
}  

