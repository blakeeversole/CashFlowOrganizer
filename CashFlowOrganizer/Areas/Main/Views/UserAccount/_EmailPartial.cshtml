
@using (Ajax.BeginForm("UpdateEmail", "UserAccount", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "Email", InsertionMode = InsertionMode.Replace }))
{
    @Html.Raw(TempData["EmailMSG"])

    <div class="col-sm-12 noPadding">
        <div class="col-sm-9">
            @Html.Editor("Email", new { htmlAttributes = new { @class = "form-control tallInput wideInput", @placeholder = "Email" } })
            @Html.ValidationMessage("Email")
        </div>
        <div class="col-sm-3">
            <div class="text-center">
                <button type="submit" class="btn btn-block btnHover font125 greyblueBACKGROUND whiteCOLOR roundBORDER">Update</button>
            </div>
        </div>
    </div>

    <div>@Html.ValidationMessage("Summary")</div>
}  

